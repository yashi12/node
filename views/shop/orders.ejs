<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="./css/cart.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<% if (orders.length > 0 ) { %>
    <ul class="cart__item-list">
        <% orders.forEach(order=>{ %>
            <li class="cart__item">
                <!--                    <div class="row">-->

                <ul class="cart__item-list">
                    <h1>Order- # <%= order._id %></h1>
                    <% order.items.forEach(item => { %>
                        <li class="cart__item">
                            <div class="col-sm col-6">
                                <img class="card-img-left cart-img thumbnail pull-left" src="<%= item.imageUrl %>"
                                     alt="Card image cap">
                            </div>
                            <div class="col-sm col-6">
                                <h1 class="list-group-item">Item: <%= item.title %> </h1>
                                <h2 class="list-group-item">Quantity: <%= item.quantity %> </h2>
                                <h2 class="list-group-item">Cost: <%= item.cost %> </h2>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
<% } %>
<%- include('../includes/end.ejs') %>
